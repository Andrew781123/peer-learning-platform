generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int                @id
  username         String             @db.VarChar(255)
  questionSolution QuestionSolution[]
  solutionComments SolutionComment[]
}

model Course {
  id         Int           @id
  title      String        @db.VarChar(255)
  pastPapers PastPaper[]
  topics     CourseTopic[]
}

model PastPaper {
  id        Int        @id
  course    Course     @relation(fields: [courseId], references: [id])
  courseId  Int
  questions Question[]
}

model Question {
  id          Int                @id
  pastPaper   PastPaper          @relation(fields: [pastPaperId], references: [id])
  pastPaperId Int
  number      Int                @db.TinyInt
  answers     QuestionSolution[]
  topics      QuestionTopic[]
}

model QuestionSolution {
  id               Int               @id
  question         Question          @relation(fields: [questionId], references: [id])
  questionId       Int
  user             User              @relation(fields: [userId], references: [id])
  userId           Int
  markdown         String            @db.Text
  difficultyRating Int               @db.TinyInt
  votes            Int               @default(0) @db.Int
  comments         SolutionComment[]
}

model SolutionComment {
  id         Int              @id
  solution   QuestionSolution @relation(fields: [solutionId], references: [id])
  solutionId Int
  user       User             @relation(fields: [userId], references: [id])
  userId     Int
  markdown   String           @db.Text
}

model CourseTopic {
  id        Int             @id
  course    Course          @relation(fields: [courseId], references: [id])
  courseId  Int
  questions QuestionTopic[]
}

model QuestionTopic {
  id         Int         @id
  question   Question    @relation(fields: [questionId], references: [id])
  questionId Int
  topic      CourseTopic @relation(fields: [topicId], references: [id])
  topicId    Int

  @@unique([questionId, topicId], name: "question_topic_unique")
}
